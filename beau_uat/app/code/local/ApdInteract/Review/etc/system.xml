<?xml version="1.0"?>
 <config>
     <sections>
         <apdinteract_review_section translate="label" module="apdinteract_review">
             <label>Review Reminder Email</label>
             <tab>apdinteract</tab>
             <frontend_type>text</frontend_type>
             <sort_order>4000</sort_order>
             <show_in_default>1</show_in_default>
             <show_in_website>1</show_in_website>
             <show_in_store>1</show_in_store>
            <groups>
                 <apdinteract_review_group translate="label" module="apdinteract_review">
                     <label> Product Review Reminder Email Setting</label>
                     <frontend_type>text</frontend_type>
                     <sort_order>1000</sort_order>
                     <show_in_default>1</show_in_default>
                     <show_in_website>1</show_in_website>
                     <show_in_store>1</show_in_store>
                     <fields>                        
                        <apdinteract_review_email_template>
                            <label>Select Email Template </label>
                            <comment></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </apdinteract_review_email_template>
                        <apdinteract_review_identity translate="label">
                            <label>Sender's Email </label>
                            <comment></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apdinteract_review_identity>
                        <apdinteract_review_recipient translate="label">
                            <label>Recipient's Email </label>
                            <comment></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apdinteract_review_recipient>
                    </fields>
                 </apdinteract_review_group>
             </groups>
         </apdinteract_review_section>
     </sections>
 </config>