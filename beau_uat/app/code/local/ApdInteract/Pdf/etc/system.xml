<?xml version="1.0"?>
<config>
	  <sections>
		<apdinteract_invoice_pdf  translate="label" module="apdinteract_pdf">
		<label>Invoice PDF</label>
		<tab>social_media</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <options translate="label">
                        <label>Details</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>0</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <fields>
                            <logo translate="label">
                                <label>Logo</label>
                                <frontend_type>image</frontend_type>
                                <backend_model>adminhtml/system_config_backend_image</backend_model>
                                <upload_dir config="system/filesystem/media" scope_info="1">catalog/product/watermark</upload_dir>
                                <base_url type="media" scope_info="1">catalog/product/watermark</base_url>
                                <sort_order>0</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </logo>
                            <title translate="label">
                                <label>Title</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>1</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </title>
                            <abn translate="label">
                                <label>ABN</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </abn>
                            <phone translate="label">
                                <label>Telephone</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>3</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </phone>
                        </fields>
                    </options>
                        <staticblock_addons>
                                <label>Static Block Add-ons</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>1</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <fields>
                                    <block_1 translate="label">
                                        <label>Block 1</label>
                                        <frontend_type>select</frontend_type>
                                        <source_model>apdinteract_pdf/system_config_source_dropdown_Staticblocks</source_model>
                                        <sort_order>0</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <comment>Select from CMS > Static Blocks</comment>
                                    </block_1>
                                    <block_2 translate="label">
                                        <label>Block 2</label>
                                        <frontend_type>select</frontend_type>
                                        <source_model>apdinteract_pdf/system_config_source_dropdown_Staticblocks</source_model>
                                        <sort_order>1</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <comment>Select from CMS > Static Blocks</comment>
                                    </block_2>
                                    <block_3 translate="label">
                                        <label>Block 3</label>
                                        <frontend_type>select</frontend_type>
                                        <source_model>apdinteract_pdf/system_config_source_dropdown_Staticblocks</source_model>
                                        <sort_order>2</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <comment>Select from CMS > Static Blocks</comment>
                                    </block_3>
                                    <block_4 translate="label">
                                        <label>Block 4</label>
                                        <frontend_type>select</frontend_type>
                                        <source_model>apdinteract_pdf/system_config_source_dropdown_Staticblocks</source_model>
                                        <sort_order>3</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <comment>Select from CMS > Static Blocks</comment> 
                                    </block_4>
                                </fields>
                        </staticblock_addons>
					</groups>
		</apdinteract_invoice_pdf>
	  </sections>
</config>
