<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>

        <silverpop_api translate="label" module="silverpopapi">
            <label>Silverpop API</label>
            <tab>apdinteract</tab>
            <frontend_type>text</frontend_type>
            <sort_order>91314</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Silverpop API Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

                        <api_url translate="label comment">
                            <label>Silverpop API Endpoint (URL)</label>
                            <comment>eg http://api7.ibmmarketingcloud.com/XMLAPI</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_url>
                        
                        <username translate="label comment">
                            <label>Username</label>
                            <comment>eg api-magento.goodyear@goodyear.com.au</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </username>
                        
                        <password translate="label comment">
                            <label>Password</label>
                            <comment>Silverpop API login password</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                        
                        <db_name translate="label comment">
                            <label>Database Name</label>
                            <comment>eg Beaurepaires</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </db_name>
                        
                        <list_prefix translate="label comment">
                            <label>Contact List Prefix</label>
                            <comment>eg Beaurepaires - Marketing -</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </list_prefix>

                    </fields>
                </settings>
            </groups>
        </silverpop_api>
        
    </sections>
</config>