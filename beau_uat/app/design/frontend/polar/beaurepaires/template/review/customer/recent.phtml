<?php if( $this->getCollection() && $this->count()): ?>
    <div class="row info-box">
        <div class="columns">
            <div class="title">
                <h5><?php echo $this->__('My Recent Reviews') ?></h5>
                <a href="<?php echo $this->getUrl('account/reviews/') ?>"><?php echo $this->__('View All Reviews') ?></a>
            </div>
            
            <hr>


            <ul class="no-bullet">
                <?php $iterator = 0 ?>
                <?php foreach ($this->getCollection() as $_review): ?>
                    <li class="item">   
                                        
                        <a href="<?php echo $this->getUrl('account/reviews/view/id/'.$_review->getReviewId())?>"><?php echo $this->escapeHtml($_review->getName()) ?></a>
                        <?php if($_review->getSum()): ?>
                                <div class="star-rating">                                              
                                    <?php echo $this->__('Rating:') ?>
                                    <?php echo Mage::helper('apdwidgets')->getStarHtmlFromRating($_review->getSum()) ?>
                                </div>
                        <?php endif; ?>
                       
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
<?php endif; ?>


