<?php
$group_id = Mage::getSingleton('customer/session')->getCustomerGroupId();
$blocks = Mage::getModel('dynamicblock/dynamicblock')->getBlockByGroup($group_id);
$count = $blocks->count();
$block = $blocks->getFirstItem();
$identifier = $block->getIdentifier();

if ($count > 0):
    ?>
    <div class="block-content">    	
    	<?php echo $this->getLayout()->createBlock('cms/block')->setBlockId($identifier)->toHtml(); ?>
    </div>
<?php endif; ?>