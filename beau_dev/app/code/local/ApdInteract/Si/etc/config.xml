<config>
    <modules>
        <ApdInteract_Si>
            <version>0.1.0</version>    <!-- Version number of your module -->
        </ApdInteract_Si>
    </modules>
    <global>
        <resources>
            <apdinteract_si_setup>
                <setup>
                    <module>ApdInteract_Si</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </apdinteract_si_setup>
        </resources>
        <helpers>
            <si>
                <class>ApdInteract_Si_Helper</class>
            </si>
        </helpers>
    </global>
    <frontend>
        <routers>
            <si>
                <use>standard</use>
                <args>
                    <module>ApdInteract_Si</module>
                    <frontName>si</frontName>
                </args>
            </si>
        </routers>
    </frontend>
</config>