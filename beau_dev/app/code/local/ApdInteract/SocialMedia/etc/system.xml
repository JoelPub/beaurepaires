<?xml version="1.0"?>
<config>
	<tabs>
        <social_media translate="label" module="apdinteract_socialmedia">
            <label>Beaurepaires</label>
            <sort_order>100</sort_order>
        </social_media>
    </tabs>
    <sections>
        <social_media translate="label" module="apdinteract_socialmedia">
            <label>Social Media Footer Icons</label>
            <tab>social_media</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<socialmediasetting translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <socialmedia_enabled translate="label">
                            <label>Enable social Media icons</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </socialmedia_enabled>
                    </fields>
                </socialmediasetting>
                <socialmediashare translate="label">
                    <label>Social Media Buttons Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[ <strong>Note:</strong> Blank URL will not be displayed in the Footer.]]></comment>
                    <fields>
                        <facebookurl translate="label">
                            <label>Facebook URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Facebook URL like https://www.facebook.com</comment>
                        </facebookurl>
                        <twitterurl translate="label">
                            <label>Twitter URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Twitter URL like https://www.twitter.com</comment>
                        </twitterurl>
                        <youtubeurl translate="label">
                            <label>Youtube URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Youtube URL like https://www.youtube.com</comment>
                        </youtubeurl>
                        <googleplusurl translate="label">
                            <label>Google + URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Google + URL like https://www.plus.google.com</comment>
                        </googleplusurl>
                        <linkedinurl translate="label">
                            <label>Linkedin URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Linkedin URL like https://www.linkedin.com</comment>
                        </linkedinurl>
                        <vimeourl translate="label">
                            <label>Vimeo URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Vimeo URL like https://vimeo.com</comment>
                        </vimeourl>
                        <instagramurl translate="label">
                            <label>Instagram URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Instagram URL like https://www.instagram.com</comment>
                        </instagramurl>
                        <pinteresturl translate="label">
                            <label>Pinterest URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <comment>Enter Pinterest URL like https://www.pinterest.com</comment>
                        </pinteresturl>
                    </fields>
                </socialmediashare>
            </groups>
        </social_media>
    </sections>
</config>
